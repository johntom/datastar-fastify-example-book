        <!-- Live Reload Script (Development Only) -->
        <script>
            // Only enable in development
            if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1' || window.location.hostname.includes('10.1.215')) {
                const eventSource = new EventSource('/live-reload');

                eventSource.onopen = () => {
                    console.log('ðŸ”„ Live reload connected');
                };

                eventSource.onmessage = (event) => {
                    try {
                        const data = JSON.parse(event.data);

                        if (data.type === 'connected') {
                            console.log('âœ… Live reload active - changes will auto-refresh');
                        } else if (data.type === 'reload') {
                            console.log(`ðŸ”„ File changed: ${data.file} - Reloading page...`);
                            // Small delay to ensure server has recompiled the template
                            setTimeout(() => {
                                window.location.reload();
                            }, 100);
                        }
                    } catch (e) {
                        console.error('Live reload error:', e);
                    }
                };

                eventSource.onerror = (error) => {
                    console.log('Live reload disconnected - will retry automatically');
                    // EventSource automatically reconnects
                };
            }
        </script>
